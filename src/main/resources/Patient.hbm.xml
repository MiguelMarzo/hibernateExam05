<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.marzo.hibernate.migueltarea5.models">

	<class name="Patient" table="patients">
		<id name="id" column="idPatient">
			<generator class="identity" />
		</id>
		<property name="name" />
		<property name="sex" />
		<list name="doctors" table="doctors_patients" cascade="all">
			<key column="idPatient" />
			<list-index column="list_order" />
			<many-to-many class="Doctor" column="idDoctor" />
		</list>
	</class>

</hibernate-mapping>